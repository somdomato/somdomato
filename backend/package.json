{
  "name": "@somdomato/backend",
  "version": "1.0.0",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --hot src/index.ts",
    "reset": "rm -rf sqlite.db src/drizzle/migrations/",
    "init": "bunx drizzle-kit generate && bun run ./src/drizzle/migrate.ts && bun run ./src/drizzle/seed.ts",
    "generate": "bunx drizzle-kit generate",
    "seed": "bun run ./src/drizzle/seed.ts",
    "migrate": "bun run ./src/drizzle/migrate.ts",
    "studio": "bunx drizzle-kit studio"
  },
  "dependencies": {
    "better-sqlite3": "^11.1.2",
    "drizzle-orm": "^0.31.4",
    "hono": "^4.4.13",
    "yt-dlp-wrap": "^2.3.12"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.22.8"
  }
}